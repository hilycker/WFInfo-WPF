                </StackPanel>
            </Border>
            <StackPanel Height="81" VerticalAlignment="Top" Width="153" Background="#FF1B1B1B">
                <Label Content="Market Data:" HorizontalAlignment="Center" VerticalAlignment="Center" Width="153" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Foreground="#FFB1D0D9" FontSize="15" FontFamily="Tahoma" FontWeight="Bold"/>
                <Label Content="Drop Data:" HorizontalAlignment="Center" VerticalAlignment="Center" Width="153" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Foreground="#FFB1D0D9" FontSize="15" FontFamily="Tahoma" FontWeight="Bold"/>
                <Label Content="Wiki Data:" HorizontalAlignment="Center" VerticalAlignment="Center" Width="153" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Foreground="#FFB1D0D9" FontFamily="Tahoma" FontSize="15" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Height="81" VerticalAlignment="Top" Width="153" Background="#FF1B1B1B">
                <Label Content="Loading..." HorizontalAlignment="Center" VerticalAlignment="Center" Width="153" VerticalContentAlignment="Center" Foreground="#FFB1D0D9" FontSize="15" FontFamily="Tahoma" FontWeight="Bold"/>
                <Label Content="Loading..." HorizontalAlignment="Center" VerticalAlignment="Center" Width="153" VerticalContentAlignment="Center" Foreground="#FFB1D0D9" FontSize="15" FontFamily="Tahoma" FontWeight="Bold"/>
                <Label Content="Loading..." HorizontalAlignment="Center" VerticalAlignment="Center" Width="153" VerticalContentAlignment="Center" Foreground="#FFB1D0D9" FontFamily="Tahoma" FontSize="15" FontWeight="Bold"/>
            </StackPanel>
        </DockPanel>
    </DockPanel>
</Window>
